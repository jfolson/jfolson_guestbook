<h1>Listing posts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Dob</th>
    <th>Desire</th>
    <th>Interests</th>
    <th>Hobby</th>
    <th>Signature</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.name %></td>
    <td><%= post.address %></td>
    <td><%= post.dob %></td>
    <td><%= post.desire %></td>
    <td><%= post.interests %></td>
    <td><%= post.hobby %></td>
    <td><%= post.signature %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
